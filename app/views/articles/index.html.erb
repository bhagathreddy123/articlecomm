<table class="table table border">
<tr>
	<th>Name </th>
	<th> Content</th>
	<th> Action</th>
</tr>

<% @articles.each do |article| %>
<tr>
<td><%=article.name%></td>
<td><%=article.content%></td>
<td><%= link_to "Edit", edit_article_path(article), :class => "btn btn-primary"%>|
<%= link_to "Show", article_path(article), :class => "btn btn-success"%>|
<%= link_to "Delete", article_path(article), :method => :delete, :class => "btn btn-danger"%></td>
</tr>
<%end%>
</table>


<%= link_to "New", new_article_path, :class => "btn btn-info" %>