<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div >
      <h2>
        <%= pluralize(@article.errors.count, "error") %>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-field">
<%= f.label :name %>
<%= f.text_field :name %>
</div>

<div class="form-field">
<%= f.label :content %>
<%= f.text_field :content %>
</div>

<div class="form-action">
<%= f.submit %>
</div>
<%end%>