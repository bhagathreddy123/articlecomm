<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div >
      <h2>
        <%= pluralize(@recipe.errors.count, "error") %>
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
<%= f.label :title %>
<%= f.text_field :title, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :ingredients %>
<%= f.text_field :ingredients, :class => "form-control" %>
</div>


<div class="form-group">
<%= f.label :procedure %>
<%= f.text_field :procedure, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :food_preference %><br>
<%= f.select(:food_preference_id,options_from_collection_for_select(FoodPreference.all, :id, :name),
 {:prompt => 'Please Choose'}, :class => "form-control") %>
</div>

<div class="form-group">
<%= f.label :food_type %><br>
<%= f.select(:food_type_id,options_from_collection_for_select(FoodType.all, :id, :name),
 {:prompt => 'Please Choose'}, :class => "form-control") %>
</div>
<div class="form-group">
<%= f.label :cuisine_type %><br>
<%= f.select(:cuisine_id,options_from_collection_for_select(Cuisine.all, :id, :name),
 {:prompt => 'Please Choose'}, :class => "form-control") %>
</div> 

<div class="form-group">
<%= f.label :difficulty_level %><br>
<%=f.select :difficulty_level, Recipe::DIFFICULTY,{} , :class => "form-control"%>
</div>

<div class="form-action">
<%= f.submit %>
</div>
<%end%>  



