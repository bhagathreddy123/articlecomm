<%= form_for @game do |f| %>
  <% if @game.errors.any? %>
    <div >
      <h2>
        <%= pluralize(@game.errors.count, "error") %>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-field">
<%= f.label :name %>
<%= f.text_field :name %>
</div>

<div class="form-field">
<%= f.label :description %>
<%= f.text_field :description %>
</div>

<div class="form-action">
<%= f.submit %>
</div>
<%end%>